<% @page_title = 'Location' %>

<div class="full">
	<div class="wrap">
	  <h1>Location Info</h1>
	  <hr class="title-line">
		<div class="clearfix"></div>

		<div class="full-location-info">
			<div class="attr lab">
				<p>
					<b>Lab:</b><br>
					<%= @location.lab %>
				</p>
			</div>

			<div class="attr details">
				<p>
					<b>Notes/Details:</b><br>
					<% if @location.detail %>
						<%= @location.detail %>
					<% else %>
					...
					<% end %>
				</p>
			</div>

			<div class="attr st-addr">
				<p>
					<b>Address:</b><br>
					<%= @location.addr1.titleize %><br>
					<% if @location.addr2 %><%= @location.addr2.titleize %><br><% end %>
					<%= @location.city.titleize %>, <%= @location.state.upcase %> <%= @location.zip %>
				</p>

				<% if @location.longitude && @location.latitude %>
					<p>[ <%= @location.latitude %>,<%= @location.longitude %> ]</p>
				<% end %>
			</div>

			<div class="attr number">
				<p>
					<b>Phone:</b><br>
					<%= number_to_phone(@location.phone, delimiter: '.', area_code: true) %>
				<% if @location.ext %><br><span class="ext">Ext: <%= @location.ext %></span> <% end %>
				</p>
			</div>

			<div class="attr fax">
				<p>
					<b>Fax:</b><br>
					<%= number_to_phone(@location.fax, delimiter: '.', area_code: true) %></p>
			</div>
		</div>

		<div class="location-actions">
			<% if current_user.admin? %>
			  <%= link_to("Edit Location", edit_location_path(@location), class: 'action btn btn-default edit') %>
				<%= link_to "Delete Location", location_path(@location), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "action btn btn-danger" %>
			<% end %>

			<%= link_to("<< All Locations", locations_path, :class => 'action btn btn-default back') %>
		</div>

	</div>
</div>








