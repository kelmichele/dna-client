<% @page_title = "Create a New Location" %>

<div class="full">
	<div class="wrap">
		<div class="form-pagetop">
			<div class="title-left">
				<h1><%= @page_title %></h1>
			</div>

			<% if current_user.email = "kelli@hsdesignhouse.com"%>
			<div class="btns-right">
				<div class="import-box">
					<h4>Import Multiple Locations</h4>
					<hr class="hlf">
					<%= form_tag import_locations_path, multipart: true do %>
					  <%= file_field_tag :file %>
					  <br>
					  <%= submit_tag "Import", class: 'submit' %>
					<% end %>
				</div>
			</div>
			<% end %>
		</div>
		<div class="clearfix"></div><hr>

		<div class="form-sec">
			<%= render 'form' %>
		</div>
	</div>
</div>
